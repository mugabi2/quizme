<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="180dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="50dp"
    android:padding="5dp"
    app:cardCornerRadius="7dp"
    app:civ_shadow="true"
    app:civ_shadow_radius="10dp"
    app:civ_shadow_color="#3f51b5"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/linearmyquizzes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="20dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/fqimage"
            android:layout_width="140dp"
            android:layout_height="150dp"
            android:layout_marginTop="4dp"
            android:scaleType="centerCrop"
            android:src="@drawable/mozeyradi" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/fqtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Essentials of programming python"
                android:textSize="18sp"
                android:textAppearance="?attr/textAppearanceHeadline6" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fqqns"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="100 qns"
                    android:textSize="15dp"/>
                <TextView
                    android:id="@+id/fqinstruct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="by Jeff Bezos"
                    android:textSize="17dp"/>
            </LinearLayout>

            <ProgressBar
                android:id="@+id/fqprogress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:progress="50"
                android:layout_marginTop="10dp"
                android:foregroundTint="@color/secondaryColor"
                android:backgroundTint="@color/secondaryColor"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/fqremove"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:textSize="4pt"
                    android:text="@string/remove"
                    app:rippleColor="@color/redday"
                    android:textColor="@color/redday"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    />
                <Button
                    android:id="@+id/fqtake"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="take quiz"
                    android:textSize="5pt"
                    android:backgroundTint="@color/secondaryColor"
                    app:icon="@drawable/air1"
                    style="@style/Widget.MaterialComponents.Button.Icon"                        />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
