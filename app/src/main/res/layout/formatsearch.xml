<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="160dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="50dp"
    android:padding="5dp"
    app:cardCornerRadius="7dp"
    app:civ_shadow="true"
    app:civ_shadow_radius="10dp"
    app:civ_shadow_color="#3f51b5"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/linearsearch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="20dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/fsimage"
            android:layout_width="140dp"
            android:layout_height="150dp"
            android:layout_marginTop="4dp"
            android:scaleType="centerCrop"
            android:src="@drawable/mozeyradi" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/fstitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Essentials of programming python"
                android:textSize="18sp"
                android:textAppearance="?attr/textAppearanceHeadline6" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fsqns"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="100 qns"
                    android:textSize="15dp"/>
                <TextView
                    android:id="@+id/fsinstruct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="by Jeff Bezos"
                    android:textSize="17dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/fsprice"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:textSize="8pt"
                    android:gravity="center"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:text="@string/free"
                    />
                <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                    android:id="@+id/fsbuy"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/secondaryColor"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    app:iconTint="@color/white"
                    android:layout_above="@id/bottomnavigation"
                    android:text="BUY NOw"
                    app:icon="@drawable/addw" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
