<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="50dp"
    android:padding="5dp"
    app:cardCornerRadius="7dp"
    app:civ_shadow="true"
    app:civ_shadow_radius="10dp"
    app:civ_shadow_color="#3f51b5"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/linearcart"
        android:layout_width="350dp"
        android:layout_height="130dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/fcimage"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:src="@drawable/mozeyradi" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/fctitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Essentials of programming python"
                android:textSize="16sp"
                android:textAppearance="?attr/textAppearanceHeadline6" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                    android:id="@+id/fcqns"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="100 qns"
                    android:textSize="13dp"/>
                <TextView
                    android:id="@+id/fcinstructor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="by Jeff Bezos"
                    android:textSize="13dp"/>
                </LinearLayout>

<!--                <TextView-->
<!--                    android:id="@+id/fcdollar"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginLeft="20dp"-->
<!--                    android:text="$"-->
<!--                    android:textSize="30dp"/>-->
                <TextView
                    android:id="@+id/fcprice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:textSize="30dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/fcremove"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="4pt"
                    android:text="@string/remove"
                    app:rippleColor="@color/redday"
                    android:textColor="@color/redday"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    />
                <Button
                    android:id="@+id/fcbuy"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/buynow"
                    android:textSize="5pt"
                    android:backgroundTint="@color/secondaryColor"
                    app:icon="@drawable/addw"
                    style="@style/Widget.MaterialComponents.Button.Icon"                        />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
