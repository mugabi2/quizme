<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="50dp"
    android:padding="5dp"
    app:cardCornerRadius="7dp"
    app:civ_shadow="true"
    app:civ_shadow_radius="10dp"
    app:civ_shadow_color="#3f51b5"
    xmlns:android="http://schemas.android.com/apk/res/android">

  <LinearLayout
      android:id="@+id/linearwishlist"
      android:layout_width="match_parent"
      android:layout_height="70dp"
      android:layout_gravity="center_horizontal"
      android:orientation="horizontal">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/fwimage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/griezo"
        android:scaleType="centerCrop"
        android:layout_marginTop="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:orientation="vertical">
      <TextView
          android:id="@+id/fwtitle"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Essentials of programming python"
          android:textSize="15sp"
          android:layout_centerHorizontal="true"
          android:textAppearance="?attr/textAppearanceHeadline6" />

        <Button
            android:id="@+id/fwremove"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textSize="3pt"
            android:layout_below="@id/fwtitle"
            android:layout_centerHorizontal="true"
            android:text="@string/remove"
            app:icon="@drawable/delete1"
            app:iconTint="@color/redday"
            app:rippleColor="@color/redday"
            android:textColor="@color/redday"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            />

    </RelativeLayout>
  </LinearLayout>
</com.google.android.material.card.MaterialCardView>
