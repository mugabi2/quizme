<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor"
    tools:context="com.quizinfinity.quizme.login">

    <fr.castorflex.android.circularprogressbar.CircularProgressBar
        android:id="@+id/progbarLog"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:visibility="gone"
        android:elevation="50dp"
        app:cpb_color="#FFee44"
        app:cpb_colors="@array/arrayone"
        app:cpb_max_sweep_angle="300"
        app:cpb_min_sweep_angle="10"
        app:cpb_rotation_speed="1.0"
        app:cpb_stroke_width="5dp"
        app:cpb_sweep_speed="1.0" />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quiz Fox"
        android:textSize="35sp"
        android:textColor="@color/white"
        android:layout_above="@+id/card"
        android:layout_centerHorizontal="true"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="340dp"
        android:layout_height="380dp"
        android:layout_centerInParent="true"
        app:cardCornerRadius="6dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true">


            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

               <include layout="@layout/view_login"/>

                <include layout="@layout/view_register"/>


            </FrameLayout>



    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton        android:id="@+id/fab"
        app:fabSize="normal"
        android:contentDescription="blass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginRight="6dp"
        android:layout_marginEnd="6dp"
        android:adjustViewBounds="true"
        android:background="@color/secondaryColor"
        android:backgroundTint="@color/secondaryColor"
        android:src="@drawable/addw"
        app:iconTint="@color/white"
        app:elevation="20dp"
        android:layout_alignTop="@+id/card"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />



</RelativeLayout>
