<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:id="@+id/cardcateg"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"

    card_view:cardCornerRadius="10dp"
    app:cardBackgroundColor="#ACACAC"
    card_view:cardElevation="5dp"
    app:contentPadding="10dp"
    card_view:cardUseCompatPadding="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="65dp"
        android:layout_margin="0dp"
        android:backgroundTint="@color/graydark2"
        android:orientation="horizontal"
        android:padding="10dp">

        <!-- Title, secondary and supporting text -->
        <TextView
            android:id="@+id/categtitle"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Information technology"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textSize="13sp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/aero1" />
    </LinearLayout>
<!--    <View-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="10dp"-->
<!--        android:background="@color/owlpink3"/>-->
</com.google.android.material.card.MaterialCardView>
