<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.quizinfinity.quizme">
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.Manifest.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Quizme">
        <activity android:name="com.quizinfinity.quizme.coins">
        </activity>
        <activity android:name="com.quizinfinity.quizme.login"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name="com.quizinfinity.quizme.discover"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.quizinfinity.quizme.splash"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter></activity>
        <activity
            android:name="com.quizinfinity.quizme.quizDetails"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name="com.quizinfinity.quizme.answeringQuiz"
            android:label="@string/quiz"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name="com.quizinfinity.quizme.myQuizzes"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name="com.quizinfinity.quizme.profile"
            android:label="@string/profile"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name="com.quizinfinity.quizme.MainActivity"
            android:screenOrientation="portrait" />
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-6920260159880773~5365529947"/>
    </application>

</manifest>